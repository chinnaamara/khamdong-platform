div
    section.container
        .row
            .col-lg-12
                .panel.panel-primary
                    .panel-heading Grievances
                    .panel-body
                        .loader-div(ng-show='loading')
                            //img.noImage(src = '../images/loader.jpg')
                            //br
                            h4 Loading, Please wait...
                        .main-div(ng-show="loadDone")
                            .search.col-xs-4.pull-left
                                button.btn.btn-info(ui-sref='newGrievance')
                                    i.glyphicon.glyphicon-plus
                                    |   Create New
                            .search.col-xs-4.pull-right
                                input(type="search", class="form-control", ng-model="filter.$", placeholder="search here..")

                            .table-responsive
                                table#userGrievancesTable(class="table table-striped table-bordered table-condensed", ng-table='tableParams')
                                    //thead
                                    //    tr
                                    //        th #
                                    //        th Reference Id
                                    //        th Name
                                    //        th Mobile Number
                                    //        //th Grievance Type
                                    //        th Department
                                    //        th Scheme
                                    //        th Requirement
                                    //        th Applied Date
                                    //        th Responded Date
                                    //        th Status
                                    //        th Message
                                    tbody
                                        tr(ng-repeat='grievance in $data | orderByPriority | orderBy : predicate')
                                            td(data-title='"#"')
                                                //{{ grievance.status }}
                                                a.btn.btn-sm.btn-warning(href="", ng-click="editDetails(grievance)", ng-if='grievance.status == "Open"')
                                                    i.glyphicon.glyphicon-edit
                                                    |   Edit
                                                a.btn.btn-sm.btn-info(href="", data-toggle="modal",id='grievancePrint', data-target="#myDetails", ng-click="showDetails(grievance)")
                                                    i.glyphicon.glyphicon-print
                                                    |   Print
                                            td(data-title='"Reference Id"')
                                                span {{ grievance.referenceNum }}
                                            td(data-title='"Name"')
                                                span {{ grievance.name }}
                                            td(data-title='"Mobile Number"')
                                                span {{ grievance.phoneNumber }}
                                            //td
                                            //    span {{ grievance.grievanceType }}
                                            td(data-title='"Department"')
                                                span {{ grievance.department }}
                                            td(data-title='"Scheme"')
                                                span {{ grievance.scheme }}
                                            td(data-title='"Requirement"')
                                                span {{ grievance.requirement }}
                                            td(data-title='"Applied Date"')
                                                span {{ grievance.applicationDate }}
                                            td(data-title='"Responded Date"')
                                                span {{ grievance.respondedDate }}
                                            td(data-title='"Status"')
                                                span {{ grievance.status }}
                                            td(data-title='"Message"')
                                                span {{ grievance.message }}

                            //.pull-right
                            //    button.btn.btn-info.btn-sm#prev(ng-click='pageBack()', ng-disabled='noPrevious')
