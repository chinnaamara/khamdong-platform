div
    section.container
        .row
            .col-lg-12
                .panel.panel-primary
                    .panel-heading Grievances
                    .panel-body
                        .col-xs-4.pull-left
                            button.btn.btn-info(ui-sref='newGrievance')
                                | Create New Grievance
                        .col-xs-4.pull-right
                            input(type="search", class="form-control", ng-model="grievanceKey", placeholder="search by mobile number")
                        .table-responsive
                            table#userGrievancesTable(class="table table-striped table-bordered table-condensed")
                                thead
                                    tr
                                        th #
                                        th Name
                                        th Phone Number
                                        th Grievance Type
                                        th Department
                                        th Scheme
                                        th Requirement
                                        th Status
                                        th Message
                                        th
                                            | Responded Date
                                            br
                                            | (mm/dd/yyyy Time)
                                tbody
                                    tr(ng-repeat='grievance in grievances | orderByPriority | filter: grievanceKey | orderBy : predicate')
                                        td
                                            a.btn.btn-info(href="", data-toggle="modal", data-target="#myDetails", ng-click="showDetails(grievance)")
                                                i.icon-trash.icon-white
                                                | Print
                                        td
                                            span {{ grievance.name }}
                                        td
                                            span {{ grievance.phoneNumber }}
                                        td
                                            span {{ grievance.grievanceType }}
                                        td
                                            span {{ grievance.department }}
                                        td
                                            span {{ grievance.scheme }}
                                        td
                                            span {{ grievance.requirement }}
                                        td
                                            span {{ grievance.status }}
                                        td
                                            span {{ grievance.message }}
                                        td
                                            span {{ grievance.respondedDate }}

div#printThissdf
    #myDetails.modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    button.close(type='button btn-primary', data-dismiss='modal' data-target='.bs-example-modal-lg')
                        span(aria-hidden='true') Ã—
                        span.sr-only Close
                    h4#myModalLabel.modal-title Grievance Details
                .modal-body
                    div#printThis
