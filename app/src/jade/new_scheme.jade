section.container
    .row
        .col-lg-12
            //h2(class='text-center') Add New Grievance
            //br
            .alert.alert-success(ng-show='error')
                i.fa.fa-check-circle-o
                | Scheme Added Successfully!
            .panel.panel-primary
                .panel-heading
                    | New Scheme
                .panel-body
                    form(ng-submit='addScheme()')
                        .form-group.has-warning
                            label Choose Department
                            select.form-control(ng-model='dept')
                                option(value='{{obj.id}}', ng-repeat='obj in departments') {{obj.departmentName}}
                        .form-group.has-warning
                            label Scheme Code
                            input.form-control(type='text', ng-model='schemeCode')
                        .form-group.has-warning
                            label Scheme Name
                            input.form-control(type='text', ng-model='schemeName')
                        div
                            .pull-right
                                input.btn.btn-primary(type='submit', value='Add')
                                input.btn.btn-primary(type='reset', value='Cancel')