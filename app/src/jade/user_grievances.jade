section.container
    .row(uploader="uploader")
        .col-lg-12
            .panel.panel-primary
                .panel-heading Grievances
                .panel-body
                    .loader-div(ng-show='loading')
                        h4 Loading, Please wait...
                    .main-div(ng-show="loadDone")
                        .col-xs-4.pull-left
                            button.btn.btn-info(ui-sref='newGrievance', title="Create New Grievance")
                                i.glyphicon.glyphicon-plus
                                |   Create New
                            &nbsp;
                            span Grievances submitted by me
                            input(type="checkbox", ng-model="checked", ng-change='filterGrievances()', title="User Grievances")

                            //select(
                            //name='selectFilter',
                            //ng-model='filterKey',
                            //ng-change='filterGrievances()',
                            //required)
                            //    option(value='',selected) -- Select Grievances --
                            //    option(value='ward') By Ward
                            //    option(value='user') By User
                        .search.col-xs-4.pull-right
                            input(type="search", class="form-control", ng-model="searchKey", placeholder="search here..")

                        .table-responsive
                            table#userGrievancesTable(class="table table-striped table-bordered table-condensed")
                                thead
                                    tr
                                        th #
                                        th Reference Id
                                        th Name
                                        th Mobile Number
                                        //th Grievance Type
                                        th Department
                                        th Scheme
                                        th Requirement
                                        th Applied Date
                                        th Responded Date
                                        th Status
                                        th Message
                                tbody
                                    tr(ng-repeat='grievance in grievances | orderByPriority | orderBy : predicate | filter: searchKey')
                                        td
                                            a.btn.btn-sm.btn-warning(href="", ng-click="editDetails(grievance)", ng-if='grievance.status == "Open"')
                                                i.glyphicon.glyphicon-edit
                                                |   Edit
                                            a.btn.btn-sm.btn-info(href="", data-toggle="modal",id='grievancePrint', data-target="#myDetails", ng-click="showDetails(grievance)")
                                                i.glyphicon.glyphicon-print
                                                |   Print
                                        td
                                            span {{ grievance.referenceNum }}
                                        td
                                            span {{ grievance.name }}
                                        td
                                            span {{ grievance.phoneNumber }}
                                        //td
                                        //    span {{ grievance.grievanceType }}
                                        td
                                            span {{ grievance.department }}
                                        td
                                            span {{ grievance.scheme }}
                                        td
                                            span {{ grievance.requirement }}
                                        td
                                            span {{ grievance.applicationDate }}
                                        td
                                            span {{ grievance.respondedDate }}
                                        td
                                            span {{ grievance.status }}
                                        td
                                            span {{ grievance.message }}

                            .pull-right
                                button.btn.btn-info.btn-sm#prev(ng-click='pageBack()', ng-disabled='noPrevious')
                                    i.glyphicon.glyphicon-arrow-left
                                    |   Previous
                                button.btn.btn-info.btn-sm#next(ng-click='pageNext()', ng-disabled='noNext')
                                    |   Next
                                    &nbsp;
                                    i.glyphicon.glyphicon-arrow-right


