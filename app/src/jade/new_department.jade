section.container
    .row
        .col-lg-12
            //h2(class='text-center') Add New Grievance
            //br
            .alert.alert-success(ng-show='error')
                i.fa.fa-check-circle-o
                | Department Added Successfully!
            .panel.panel-primary
                .panel-heading
                    | New Department
                .panel-body
                    form(ng-submit='addDept()')
                        .form-group.has-warning
                            label Department Code
                            input.form-control(type='text', ng-model='deptCode')
                        .form-group.has-warning
                                label Department Name
                                input.form-control(type='text', ng-model='deptName')
                        div
                            .pull-right
                                input.btn.btn-primary(type='submit', value='Add')
                                input.btn.btn-primary(type='reset', value='Cancel')