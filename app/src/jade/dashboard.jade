section.container
    .row(uploader="uploader")
        .col-lg-12
            .panel.panel-primary
                .panel-heading Grievances
                .panel-body
                    .col-xs-4.pull-right
                        input(type="search", class="form-control", ng-model="grievanceKey", placeholder="search by mobile number")
                    table(class="table table-striped table-bordered table-condensed", style="margin-top: 40px")
                        thead
                            tr
                                th #
                                th Grievance Type
                                th Department
                                th Name
                                th Mobile Number
                                th Constituency
                        tbody
                            tr(ng-repeat='grievance in grievances | orderByPriority | filter: grievanceKey | orderBy : predicate')
                                td(style="width:145px;")
                                    a.btn.btn-info(href="", style="margin-left: 5px", data-toggle="modal", data-target="#myModal", ng-click="showDetails(grievance)")
                                        i.icon-trash.icon-white
                                        | Details
                                    a.btn.btn-info(href="", style="margin-left: 5px", data-toggle="modal", data-target="#myDoc", ng-click="showDoc(grievance)")
                                        i.icon-trash.icon-white
                                        | Doc
                                td
                                    a(ng-click='') {{ grievance.grievanceType }}
                                td
                                    a(ng-click='') {{ grievance.department }}
                                td
                                    a(ng-click='') {{ grievance.name }}
                                td
                                    a(ng-click='') {{ grievance.phoneNumber }}
                                td
                                    a(ng-click='') {{ grievance.constituency }}

                    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal')
                                        span(aria-hidden='true') ×
                                        span.sr-only Close
                                    h4#myModalLabel.modal-title Grievance Details
                                .modal-body
                                    p
                                        span.span3.offset2 Name:
                                        span.span4.offset2 {{ grievance.name }}
                                    p
                                        span.span3.offset2 Father Name:
                                        span.span4.offset2 {{ grievance.fatherName }}
                                    p
                                        span.span3.offset2 DOB:
                                        span.span4.offset2 {{ grievance.dob }}
                                    p
                                        span.span3.offset2 Phone Number:
                                        span.span4.offset2 {{ grievance.phoneNumber }}
                                    p
                                        span.span3.offset2 Education:
                                        span.span4.offset2 {{ grievance.education }}
                                    p
                                        span.span3.offset2 Address:
                                        span.span4.offset2 {{ grievance.address }}
                                    p
                                        span.span3.offset2 GPU:
                                        span.span4.offset2 {{ grievance.gpu }}
                                    p
                                        span.span3.offset2 Ward:
                                        span.span4.offset2 {{ grievance.ward }}
                                    p
                                        span.span3.offset2 Constituency:
                                        span.span4.offset2 {{ grievance.constituency }}
                                    p
                                        span.span3.offset2 Department:
                                        span.span4.offset2 {{ grievance.department }}
                                    p
                                        span.span3.offset2 Grievance Type:
                                        span.span4.offset2 {{ grievance.grievanceType }}
                                    p
                                        span.span3.offset2 Note:
                                        span.span4.offset2 {{ grievance.note }}
                                .modal-footer
                                    button.btn.btn-success(type='button') Accepet
                                    button.btn.btn-danger(type='button') Reject
                                    button.btn.btn-warning(type='button', data-dismiss='modal') Close

                    #myDoc.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal')
                                        span(aria-hidden='true') ×
                                        span.sr-only Close
                                    h4#myModalLabel.modal-title Grievance Details
                                .modal-body
                                    span Document
                                    canvas(id='document' style='width:500px; height: 400px;')
                                .modal-footer
                                    button.btn.btn-warning(type='button', data-dismiss='modal') Close
