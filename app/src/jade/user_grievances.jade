                        p
                            span.span3.offset2 Phone Number
                            span.span4.offset2 {{ grievanceById.phoneNumber }}
                        p
                            span.span3.offset2 Education
                            span.span4.offset2 {{ grievanceById.education }}
                        p
                            span.span3.offset2 Address
                            span.span4.offset2 {{ grievanceById.address }}
                        p
                            span.span3.offset2 GPU
                            span.span4.offset2 {{ grievanceById.gpu }}
                        p
                            span.span3.offset2 Ward
                            span.span4.offset2 {{ grievanceById.ward }}
                        p
                            span.span3.offset2 Constituency
                            span.span4.offset2 {{ grievanceById.constituency }}
                        p
                            span.span3.offset2 Department
                            span.span4.offset2 {{ grievanceById.department }}
