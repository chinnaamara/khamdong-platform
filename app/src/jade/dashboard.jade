section.container
    .row(uploader="uploader")
        .col-lg-12
            .panel.panel-primary
                .panel-heading Grievances
                .panel-body
                    .col-xs-4.pull-right
                        input(type="search", class="form-control", ng-model="grievanceKey", placeholder="search by mobile number")
                    .table-responsive
                        table#grievancesTable(class="table table-striped table-bordered table-condensed")
                            thead
                                tr
                                    th #
                                    th Grievance Type
                                    th Department
                                    th Scheme
                                    th Requirement
                                    th Name
                                    th Mobile Number
                                    th Constituency
                                    th
                                        | Applied Date
                                    th Status
                            tbody
                                tr(ng-repeat='grievance in grievances | orderByPriority | filter: grievanceKey | orderBy : predicate')
                                    td(class='buttons-td')
                                        a.btn.btn-sm.btn-info(href="", ng-click="showDetails(grievance)")
                                            i.glyphicon.glyphicon-info-sign
                                            |   Info
                                        a.btn.btn-sm.btn-info(href="", data-toggle="modal", id='grievancePrint', data-target="#myDoc", ng-click="showDoc(grievance)")
                                            i.glyphicon.glyphicon-file
                                            |   File
                                    td
                                        span {{ grievance.grievanceType }}
                                    td
                                        span {{ grievance.department }}
                                    td
                                        span {{ grievance.scheme }}
                                    td
                                        span {{ grievance.requirement }}
                                    td
                                        span {{ grievance.name }}
                                    td
                                        span {{ grievance.phoneNumber }}
                                    td
                                        span {{ grievance.constituency }}
                                    td
                                        span {{ grievance.applicationDate }}
                                    td
                                        span {{ grievance.status }}

                    #myDoc.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    button.close(type='button', data-dismiss='modal')
                                        span(aria-hidden='true') Ã—
                                        span.sr-only Close
                                    h4#myModalLabel.modal-title Grievance Document
                                .modal-body
                                    canvas(id='document')
                                    a.btn.btn-sm.btn-info(type='button', id='downloadFile')
                                        i.glyphicon.glyphicon-download
                                        |   Download
                                .modal-footer
                                    button.btn.btn-sm.btn-danger(data-dismiss='modal')
                                        i.glyphicon.glyphicon-remove
                                        |   Close
